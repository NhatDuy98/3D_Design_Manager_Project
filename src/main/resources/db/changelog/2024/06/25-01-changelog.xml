<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1719309537694-2" author="develop">
        <createTable tableName="notifications">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_notifications"/>
            </column>
            <column name="content" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="url" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_read" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="member_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="project_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="comment_id" type="UUID"/>
            <column name="card_id" type="UUID"/>
            <column name="print_id" type="UUID"/>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1719309537694-3" author="develop">
        <addUniqueConstraint columnNames="card_id" constraintName="uc_notifications_card" tableName="notifications"/>
    </changeSet>
    <changeSet id="1719309537694-4" author="develop">
        <addUniqueConstraint columnNames="comment_id" constraintName="uc_notifications_comment"
                             tableName="notifications"/>
    </changeSet>
    <changeSet id="1719309537694-5" author="develop">
        <addUniqueConstraint columnNames="print_id" constraintName="uc_notifications_print" tableName="notifications"/>
    </changeSet>
    <changeSet id="1719309537694-6" author="develop">
        <addForeignKeyConstraint baseColumnNames="card_id" baseTableName="notifications"
                                 constraintName="FK_NOTIFICATIONS_ON_CARD" referencedColumnNames="id"
                                 referencedTableName="cards"/>
    </changeSet>
    <changeSet id="1719309537694-7" author="develop">
        <addForeignKeyConstraint baseColumnNames="comment_id" baseTableName="notifications"
                                 constraintName="FK_NOTIFICATIONS_ON_COMMENT" referencedColumnNames="id"
                                 referencedTableName="comments"/>
    </changeSet>
    <changeSet id="1719309537694-8" author="develop">
        <addForeignKeyConstraint baseColumnNames="member_id" baseTableName="notifications"
                                 constraintName="FK_NOTIFICATIONS_ON_MEMBER" referencedColumnNames="id"
                                 referencedTableName="members"/>
    </changeSet>
    <changeSet id="1719309537694-9" author="develop">
        <addForeignKeyConstraint baseColumnNames="print_id" baseTableName="notifications"
                                 constraintName="FK_NOTIFICATIONS_ON_PRINT" referencedColumnNames="id"
                                 referencedTableName="prints"/>
    </changeSet>
    <changeSet id="1719309537694-10" author="develop">
        <addForeignKeyConstraint baseColumnNames="project_id" baseTableName="notifications"
                                 constraintName="FK_NOTIFICATIONS_ON_PROJECT" referencedColumnNames="id"
                                 referencedTableName="projects"/>
    </changeSet>

</databaseChangeLog>